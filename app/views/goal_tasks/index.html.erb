<h1>Listing goal_tasks</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal_tasks.each do |goal_task| %>
      <tr>
        <td><%= goal_task.goal %></td>
        <td><%= goal_task.group %></td>
        <td><%= link_to 'Show', goal_task %></td>
        <td><%= link_to 'Edit', edit_goal_task_path(goal_task) %></td>
        <td><%= link_to 'Destroy', goal_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal task', new_goal_task_path %>
